@model IEnumerable<WebApplication2.Models.Destino>

@{
    ViewBag.Title = "Index";
}

<h2>Gerenciamento de Destinos</h2>

<button>
    @Html.ActionLink("Create New", "Create")
</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.lugar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.lugar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.destinoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.destinoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.destinoId })
        </td>
    </tr>
}

</table>
