@model IEnumerable<WebApplication2.Models.Promocoes>

@{
    ViewBag.Title = "Index";
}

<div >
    <h2 class="text-center">Gerenciamento de Promoções</h2>

    <button style="bottom:10px">
        @Html.ActionLink("Create New", "Create")
    </button>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.lugar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.lugar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valor)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.promocoesId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.promocoesId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.promocoesId })
                </td>
            </tr>
        }

    </table>
</div>
